{
  "PingDatabaseSettings": {
    "CollectionName": "pings",
    "ConnectionString": "mongodb://ping:pong@localhost:27017/ping",
    "DatabaseName": "ping"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error",
        "NHibernate": "Warning",
        "NHibernate.SQL": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss+fff}{EventType:x8} {Level:u3}][{Application}] {Message:lj} [{SourceContext}]{NewLine}{Exception}",
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:6100",
          "labels": [
            {
              "key": "application",
              "value": "ping"
            },
            {
              "key": "module",
              "value": "ms"
            }
          ],
          "outputTemplate": "{Message} [{SourceContext}]{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Verbose",
          "createLevelLabel": "true"
        }
      }
    ]
  }
}
